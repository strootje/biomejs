{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe"
        }
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "useIgnoreFile": true,
    "clientKind": "git",
    "enabled": true
  }
}
